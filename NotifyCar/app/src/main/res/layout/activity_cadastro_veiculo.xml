<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ntcBackground"
    tools:context=".controller.CadastroVeiculoActivity">
    <ImageView
        android:id="@+id/ntc_logo_image_cadastro_view"
        android:src="@drawable/logo20"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/CadastroUsuario"
        android:text="Cadastro de veículo"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        />

    <Spinner
        android:id="@+id/spinnerModelos"
        android:textColor="@color/white"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/spinnerCores"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Spinner
        android:id="@+id/spinnerCores"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ntc_logo_image_cadastro_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/placaEdt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@+id/placaEdt"
        android:layout_alignLeft="@+id/spinnerModelos"
        android:layout_alignStart="@+id/spinnerModelos"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/placaEdt"
        android:hint="Placa"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/ntc_logo_image_cadastro_view"
        android:layout_alignRight="@+id/edtAno"
        android:layout_alignEnd="@+id/edtAno"
        android:layout_marginTop="25dp"
        android:textColor="@color/white" />


    <Button
        android:text="Avançar"
        android:id="@+id/btnCadastroVeiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="16"
        android:layout_marginBottom="41dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtAno"
        android:hint="Ano"
        android:textColorHint="@color/white"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/placaEdt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_below="@id/ntc_edit_text_cadastro_button"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/spinnerMarcas"
        android:textColor="@color/white"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"

        android:layout_below="@+id/CadastroUsuario"
        android:layout_alignLeft="@+id/spinnerModelos"
        android:layout_alignStart="@+id/spinnerModelos" />


</RelativeLayout>
